<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="addReco" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.update.editProductController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.2;">
         <image>
            <Image url="@../../../bin/bg.jpg" />
         </image>
      </ImageView>
      <Button fx:id="back" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      <Label layoutX="282.0" layoutY="37.0" style="-fx-opacity: 0.8;" text="Update Product" textFill="WHITE">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <TextField fx:id="name" alignment="CENTER" layoutX="268.0" layoutY="133.0" prefHeight="25.0" prefWidth="181.0" promptText="Product Name" />
      <TextField fx:id="link" alignment="CENTER" layoutX="268.0" layoutY="174.0" prefHeight="25.0" prefWidth="181.0" promptText="Image Link" />
      <TextField fx:id="price" alignment="CENTER" layoutX="268.0" layoutY="296.0" prefHeight="25.0" prefWidth="181.0" promptText="Price" />
      <TextField fx:id="quantity" alignment="CENTER" layoutX="268.0" layoutY="333.0" prefHeight="25.0" prefWidth="181.0" promptText="Quantity" />
      <ComboBox fx:id="category" layoutX="268.0" layoutY="370.0" prefHeight="26.0" prefWidth="181.0" promptText="Category" />
      <Button fx:id="saveButton" layoutX="271.0" layoutY="475.0" mnemonicParsing="false" onAction="#saveProduct" prefHeight="33.0" prefWidth="181.0" text="Save Changes" />
      <Label fx:id="labelSuccess" layoutX="173.0" layoutY="421.0" prefHeight="33.0" prefWidth="393.0" textFill="#017c87">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="comboProducts" layoutX="151.0" layoutY="78.0" onAction="#showProdDetails" prefHeight="26.0" prefWidth="437.0" promptText="Please choose a product to edit:" />
      <TextArea fx:id="desc" layoutX="269.0" layoutY="209.0" prefHeight="77.0" prefWidth="181.0" promptText="Description" />
   </children>
</AnchorPane>
