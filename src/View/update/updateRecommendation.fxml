<AnchorPane fx:id="addReco" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.update.updateRecomController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.2;">
         <image>
            <Image url="@../../../bin/bg.jpg" />
         </image>
      </ImageView>
      <Button fx:id="back" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      <Label layoutX="232.0" layoutY="52.0" style="-fx-opacity: 0.8;" text="Update Recommendation" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <TextField fx:id="chanceChos" alignment="CENTER" layoutX="267.0" layoutY="235.0" prefHeight="25.0" prefWidth="181.0" promptText="Chance Chosen" />
      <TextField fx:id="amountTax" alignment="CENTER" layoutX="267.0" layoutY="277.0" prefHeight="25.0" prefWidth="181.0" promptText="Amount Tax Recommended" />
      <DatePicker fx:id="dateCreate" layoutX="269.0" layoutY="193.0" prefHeight="25.0" prefWidth="181.0" promptText="Date Created" />
      <TextField fx:id="publicAdd" alignment="CENTER" layoutX="269.0" layoutY="324.0" prefHeight="25.0" prefWidth="181.0" promptText="Public Address" />
      <TextField fx:id="userSig" alignment="CENTER" layoutX="269.0" layoutY="372.0" prefHeight="25.0" prefWidth="181.0" promptText="User Signature" />
      <Button fx:id="addButton" layoutX="268.0" layoutY="473.0" mnemonicParsing="false" onAction="#updateRecommend" prefHeight="33.0" prefWidth="181.0" text="Update Recommendation" />
      <Label fx:id="labelSuccess" layoutX="225.0" layoutY="456.0" prefHeight="33.0" prefWidth="267.0" textFill="#017c87">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="chooseRecCombo" layoutX="173.0" layoutY="110.0" onAction="#chooseRec" prefHeight="25.0" prefWidth="368.0" promptText="Choose a Recommendation" />
   </children>
</AnchorPane>
